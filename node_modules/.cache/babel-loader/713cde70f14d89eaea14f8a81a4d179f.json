{"ast":null,"code":"import ProductCard from \"@/components/home_components/cards/ProductCard.vue\";\nimport ProductPreloader from \"@/components/preloaders/ProductPreloader.vue\";\nexport default {\n  name: \"FeaturedProducts\",\n  components: {\n    ProductCard,\n    ProductPreloader\n  },\n  props: [\"featuredProducts\"]\n};","map":{"version":3,"mappings":"AAyBA,OAAOA,WAAP,MAAwB,oDAAxB;AACA,OAAOC,gBAAP,MAA6B,8CAA7B;AACA,eAAe;AACXC,MAAI,EAAE,kBADK;AAEXC,YAAU,EAAE;AACRH,eADQ;AAERC;AAFQ,GAFD;AAMXG,OAAK,EAAE,CAAC,kBAAD;AANI,CAAf","names":["ProductCard","ProductPreloader","name","components","props"],"sourceRoot":"","sources":["D:\\empty\\BuyIt\\src\\components\\home_components\\products\\FeaturedProducts.vue"],"sourcesContent":["<template>\n    <section class=\"products\">\n        <h2>Featured Products</h2>\n        <p class=\"highlight\">The best selling products we have on sale.</p>\n        <div class=\"product__container\" v-if=\"featuredProducts\">\n            <product-card\n                v-for=\"(product, index) in featuredProducts\"\n                :key=\"index\"\n                :productId=\"product._id\"\n                :productName=\"product.name\"\n                :brand=\"product.brand\"\n                :price=\"product.price\"\n                :currency=\"product.currency\"\n                :ratings=\"product.rating\"\n                :image_url=\"product.images[0]\"\n                :in_stock=\"product.in_stock\"\n            />\n        </div>\n        <product-preloader type=\"inline\" v-else>\n            Loading products...\n        </product-preloader>\n    </section>\n</template>\n\n<script>\nimport ProductCard from \"@/components/home_components/cards/ProductCard.vue\";\nimport ProductPreloader from \"@/components/preloaders/ProductPreloader.vue\";\nexport default {\n    name: \"FeaturedProducts\",\n    components: {\n        ProductCard,\n        ProductPreloader,\n    },\n    props: [\"featuredProducts\"],\n};\n</script>\n\n<style>\n.products {\n    text-align: center;\n}\n\n.products h2 {\n    display: inline-block;\n    margin-bottom: 10px;\n}\n\n.products .highlight {\n    font-size: 1.9rem;\n}\n\n.products h2::after {\n    content: \"\";\n    display: block;\n    position: relative;\n    margin-inline: auto;\n    top: 2px;\n    height: 3px;\n    left: 0;\n    width: 0;\n    background-color: var(--text);\n    border-radius: 6px;\n    animation: play 2s infinite ease-in-out;\n}\n\n@keyframes play {\n    from {\n        width: 0;\n    }\n    50% {\n        width: 70%;\n    }\n    to {\n        width: 0;\n    }\n}\n\n.product__container {\n    display: grid;\n    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));\n    gap: 30px;\n    padding-block: 4rem;\n}\n\n@media (max-width: 1200px) {\n    .product__container {\n        justify-content: center;\n    }\n}\n\n@media (max-width: 599px) {\n    .product__container {\n        justify-content: center;\n        grid-template-columns: minmax(250px, 300px);\n    }\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}