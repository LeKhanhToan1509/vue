{"ast":null,"code":"import SubHeader from \"@/components/SubHeader.vue\";\nimport ActionButton from \"@/components/ActionButton.vue\";\nimport MainHeader from \"@/components/MainHeader.vue\";\nimport MainFooter from \"@/components/MainFooter.vue\";\nimport { mapState, mapActions, mapGetters } from \"vuex\";\nexport default {\n  components: {\n    SubHeader,\n    ActionButton,\n    MainHeader,\n    MainFooter\n  },\n  name: \"CartView\",\n\n  data() {\n    return {\n      total: 0\n    };\n  },\n\n  methods: { ...mapActions([\"delete_item\", \"update_quantity\"]),\n\n    deleteItem(index) {\n      this.delete_item(index);\n    },\n\n    updateTotalPrice(item) {\n      this.update_quantity(item);\n      this.cart.forEach(item => {\n        this.total += item.quantity * item.price;\n      });\n    }\n\n  },\n  computed: { ...mapState([\"cart\"]),\n    ...mapGetters([\"subtotal\"])\n  },\n\n  mounted() {\n    this.cart.forEach(item => {\n      this.total += item.quantity * item.price;\n    });\n  }\n\n};","map":{"version":3,"mappings":"AAuIA,OAAOA,SAAP,MAAsB,4BAAtB;AACA,OAAOC,YAAP,MAAyB,+BAAzB;AACA,OAAOC,UAAP,MAAuB,6BAAvB;AACA,OAAOC,UAAP,MAAuB,6BAAvB;AACA,SAASC,QAAT,EAAmBC,UAAnB,EAA+BC,UAA/B,QAAiD,MAAjD;AAEA,eAAe;AACXC,YAAU,EAAE;AAAEP,aAAF;AAAaC,gBAAb;AAA2BC,cAA3B;AAAuCC;AAAvC,GADD;AAEXK,MAAI,EAAE,UAFK;;AAGXC,MAAI,GAAG;AACH,WAAO;AACHC,WAAK,EAAE;AADJ,KAAP;AAGH,GAPU;;AAQXC,SAAO,EAAE,EACL,GAAGN,UAAU,CAAC,CAAC,aAAD,EAAgB,iBAAhB,CAAD,CADR;;AAELO,cAAU,CAACC,KAAD,EAAQ;AACd,WAAKC,WAAL,CAAiBD,KAAjB;AACH,KAJI;;AAMLE,oBAAgB,CAACC,IAAD,EAAO;AACnB,WAAKC,eAAL,CAAqBD,IAArB;AACA,WAAKE,IAAL,CAAUC,OAAV,CAAmBH,IAAD,IAAU;AACxB,aAAKN,KAAL,IAAcM,IAAI,CAACI,QAAL,GAAgBJ,IAAI,CAACK,KAAnC;AACH,OAFD;AAGH;;AAXI,GARE;AAqBXC,UAAQ,EAAE,EACN,GAAGlB,QAAQ,CAAC,CAAC,MAAD,CAAD,CADL;AAEN,OAAGE,UAAU,CAAC,CAAC,UAAD,CAAD;AAFP,GArBC;;AAyBXiB,SAAO,GAAG;AACN,SAAKL,IAAL,CAAUC,OAAV,CAAmBH,IAAD,IAAU;AACxB,WAAKN,KAAL,IAAcM,IAAI,CAACI,QAAL,GAAgBJ,IAAI,CAACK,KAAnC;AACH,KAFD;AAGH;;AA7BU,CAAf","names":["SubHeader","ActionButton","MainHeader","MainFooter","mapState","mapActions","mapGetters","components","name","data","total","methods","deleteItem","index","delete_item","updateTotalPrice","item","update_quantity","cart","forEach","quantity","price","computed","mounted"],"sourceRoot":"","sources":["D:\\empty\\BuyIt\\src\\views\\User\\CartView.vue"],"sourcesContent":["<template>\n    <main-header />\n    <sub-header\n        heading=\"#cart\"\n        subHeading=\"Add your coupon code and save up to 70% on all purchases!\"\n    />\n    <section class=\"cart-section\">\n        <div class=\"container\">\n            <section v-if=\"cart.length\">\n                <div class=\"cart-details\">\n                    <table>\n                        <thead>\n                            <tr>\n                                <td>Remove</td>\n                                <td>Image</td>\n                                <td>Product</td>\n                                <td>Price</td>\n                                <td>Quantity</td>\n                                <td>Subtotal</td>\n                            </tr>\n                        </thead>\n                        <tbody>\n                            <tr v-for=\"(item, index) in cart\" :key=\"index\">\n                                <td>\n                                    <svg\n                                        @click=\"deleteItem(index)\"\n                                        xmlns=\"http://www.w3.org/2000/svg\"\n                                        width=\"16\"\n                                        height=\"16\"\n                                        fill=\"currentColor\"\n                                        class=\"bi bi-x-circle delete-btn\"\n                                        viewBox=\"0 0 16 16\"\n                                    >\n                                        <path\n                                            d=\"M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z\"\n                                        />\n                                        <path\n                                            d=\"M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z\"\n                                        />\n                                    </svg>\n                                </td>\n                                <td>\n                                    <img\n                                        :src=\"item.images[0]\"\n                                        :alt=\"item.brand\"\n                                        class=\"img\"\n                                    />\n                                </td>\n                                <td>{{ item.brand }}({{ item.size }})</td>\n                                <td>\n                                    {{ item.currency }}\n                                    {{ item.price.toFixed(2) }}\n                                </td>\n                                <td>\n                                    <input\n                                        type=\"number\"\n                                        v-model=\"item.quantity\"\n                                        placeholder=\"QTY\"\n                                        min=\"1\"\n                                        max=\"10\"\n                                        @input=\"updateTotalPrice(item)\"\n                                    />\n                                </td>\n                                <td>\n                                    {{ item.currency }}\n                                    {{\n                                        (item.quantity * item.price).toFixed(2)\n                                    }}\n                                </td>\n                            </tr>\n                        </tbody>\n                    </table>\n                </div>\n\n                <div class=\"checkout-section\">\n                    <div class=\"coupon\">\n                        <h3>Apply Coupon</h3>\n                        <form>\n                            <input\n                                type=\"text\"\n                                placeholder=\"Enter coupon code\"\n                            />\n                            <action-button btnvalue=\"Apply\" />\n                        </form>\n                    </div>\n                    <div class=\"checkout\">\n                        <h3>Cart Details</h3>\n                        <table>\n                            <thead>\n                                <tr>\n                                    <td>Cart Total</td>\n                                    <td>NGN {{ subtotal.toFixed(2) }}</td>\n                                </tr>\n                            </thead>\n                            <tbody>\n                                <tr>\n                                    <td>Shipping Fee</td>\n                                    <td>Free</td>\n                                </tr>\n                                <tr>\n                                    <td><strong>Total</strong></td>\n                                    <td>\n                                        <strong\n                                            >NGN\n                                            {{ subtotal.toFixed(2) }}</strong\n                                        >\n                                    </td>\n                                </tr>\n                            </tbody>\n                        </table>\n                        <router-link to=\"/checkout\">\n                            <action-button btnvalue=\"Proceed to Checkout\" />\n                        </router-link>\n                    </div>\n                </div>\n            </section>\n            <div class=\"no-cart\" v-else>\n                <div class=\"no-cart-text\">\n                    <img\n                        src=\"@/assets/images/empty-cart.svg\"\n                        alt=\"empty-cart\"\n                    />\n                    <h3>Your cart is empty!</h3>\n                    <p>Browse our shop and discover our latest products.</p>\n                </div>\n                <router-link to=\"/shop\">\n                    <action-button btnvalue=\"Start Shopping\" />\n                </router-link>\n            </div>\n        </div>\n    </section>\n    <main-footer />\n</template>\n\n<script>\nimport SubHeader from \"@/components/SubHeader.vue\";\nimport ActionButton from \"@/components/ActionButton.vue\";\nimport MainHeader from \"@/components/MainHeader.vue\";\nimport MainFooter from \"@/components/MainFooter.vue\";\nimport { mapState, mapActions, mapGetters } from \"vuex\";\n\nexport default {\n    components: { SubHeader, ActionButton, MainHeader, MainFooter },\n    name: \"CartView\",\n    data() {\n        return {\n            total: 0,\n        };\n    },\n    methods: {\n        ...mapActions([\"delete_item\", \"update_quantity\"]),\n        deleteItem(index) {\n            this.delete_item(index);\n        },\n\n        updateTotalPrice(item) {\n            this.update_quantity(item);\n            this.cart.forEach((item) => {\n                this.total += item.quantity * item.price;\n            });\n        },\n    },\n    computed: {\n        ...mapState([\"cart\"]),\n        ...mapGetters([\"subtotal\"]),\n    },\n    mounted() {\n        this.cart.forEach((item) => {\n            this.total += item.quantity * item.price;\n        });\n    },\n};\n</script>\n\n<style scoped>\n.no-cart {\n    display: grid;\n    place-items: center;\n    gap: 30px;\n}\n\n.no-cart-text {\n    text-align: center;\n}\n\n.no-cart img {\n    height: 150px;\n    width: 30%;\n}\n\n.cart-details {\n    overflow-x: auto;\n}\n.img {\n    height: 70px;\n    width: 70px;\n    margin-inline: auto;\n    object-fit: contain;\n}\n\ntable {\n    border-collapse: collapse;\n    white-space: nowrap;\n    width: 100%;\n}\ntd {\n    font-size: 2rem;\n}\n\n.delete-btn {\n    cursor: pointer;\n}\n\n.cart-details table thead {\n    border: 1px solid lightgrey;\n    border-left: none;\n    border-right: none;\n}\n\n.cart-details table thead tr td {\n    font-weight: 600;\n    text-transform: uppercase;\n    padding-block: 2rem;\n    text-align: center;\n}\n\n.cart-details table tbody td {\n    padding-block: 2rem;\n    text-align: center;\n}\n\n.cart-details table tbody td i {\n    cursor: pointer;\n}\n\n/* Checkout */\n.checkout-section {\n    display: flex;\n    justify-content: space-between;\n    margin-top: 20px;\n}\n\n.coupon {\n    width: 40%;\n}\n\nform {\n    display: flex;\n    gap: 2rem;\n    margin-top: 1.5rem;\n}\n\nform input {\n    width: 100%;\n}\n\n.checkout {\n    width: 40%;\n    padding: 2.5rem;\n    border: 1px solid lightgrey;\n}\n\n.checkout table {\n    margin-bottom: 2rem;\n}\n\n.checkout td {\n    border: 1px solid lightgrey;\n    padding: 0.8rem;\n}\n\n@media (max-width: 699px) {\n    .cart-details table {\n        table-layout: fixed;\n    }\n    .cart-details table thead td {\n        width: 200px;\n    }\n    .checkout-section {\n        flex-direction: column;\n        gap: 3rem;\n    }\n    .checkout,\n    .coupon {\n        width: 100%;\n    }\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}